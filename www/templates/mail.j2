{% extends "layout.j2" %}
{% block body %}
  {% if session.logged_in %}
    <form action="{{ url_for('mail') }}" method="post" class="add-entry">
        <input type="hidden" name="action" value="add" />
      <dl>
        <dt>E-mail:
        <dd><input type="email" size="30" name="email">
        <dd><input type="submit" value="Add">
      </dl>
    </form>
  {% endif %}
  <ul class="entries">
  {% for entry in entries %}
    <li><h2>{{ entry|escape }}</h2> <form action="{{ url_for('mail') }}" method="post"> <input type="hidden" name="action" value="del" /><input type="hidden" name="email" value="{{ entry|escape }}" /><input type="submit" value="Del" /></form>
  {% else %}
    <li><em>Unbelievable.  No entries here so far</em>
  {% endfor %}
  </ul>
{% endblock %}
